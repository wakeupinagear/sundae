{
    "name": "@repo/engine",
    "type": "module",
    "scripts": {
        "dev": "tsc --watch",
        "build": "tsc",
        "check-types": "tsc --noEmit",
        "lint": "eslint \"src/**/*.ts\""
    },
    "exports": {
        ".": {
            "types": "./exports/index.ts",
            "default": "./dist/exports/index.js"
        },
        "./components": {
            "types": "./exports/components.ts",
            "default": "./dist/exports/components.js"
        },
        "./entities": {
            "types": "./exports/entities.ts",
            "default": "./dist/exports/entities.js"
        },
        "./image": {
            "types": "./exports/image.ts",
            "default": "./dist/exports/image.js"
