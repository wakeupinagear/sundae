        },
        "./worker": {
            "types": "./exports/worker.ts",
            "default": "./dist/exports/worker.js"
        },
        "./wrapper": {
            "types": "./exports/wrapper.ts",
            "default": "./dist/exports/wrapper.js"
        }
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "eslint": "^8.57.0",
        "typescript": "latest"
    }
}
