{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "env": ["GITHUB_PAGES"],
            "outputs": ["dist/**"]
        },
        "test": {
            "dependsOn": ["^test"]
        },
        "lint": {},
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
